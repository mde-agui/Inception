[DEFAULT]
bantime = 3600
findtime = 600
maxretry = 5
destemail = admin@mde-agui.42.fr
sender = fail2ban@mde-agui.42.fr

[wordpress]
enable = true
logpath = /var/www/html/wp-debug.log
port = 443
filter = wordpress
action = nginx-block-ip[name=wordpress]

[vsftpd]
enabled = true
logpath = /var/log/vsftpd.log
port = 21
filter = vsftpd
action = nginx-block-ip[name=vsftpd]
